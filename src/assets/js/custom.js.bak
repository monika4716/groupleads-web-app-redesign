$(".header .fa").click(function(){
	
	$("body").toggleClass("open-sidebar");
});
$(".theme").click(function(){
	
	$("body").toggleClass("dark_mode");
});
$('.overdue_task .form-control').on('blur', function() {
	$('.search_icon').show();
    $('.cross_blue').hide();
});

$(".list_view_btn").on('click',function(){
	$('.board_view_btn').removeClass('active');
    $('.list_view_btn').addClass('active');
});

$(".board_view_btn").on('click',function(){
	$('.board_view_btn').addClass('active');
    $('.list_view_btn').removeClass('active');
});